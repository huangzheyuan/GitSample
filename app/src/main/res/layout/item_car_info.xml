<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_plate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="车牌"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_main_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="车架"
        app:layout_constraintStart_toStartOf="@+id/textView_plate_number"
        app:layout_constraintTop_toBottomOf="@+id/textView_plate_number" />

    <TextView
        android:id="@+id/textView_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="类型"
        app:layout_constraintStart_toStartOf="@+id/textView_main_number"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_number" />

    <TextView
        android:id="@+id/textView_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="公里数"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textView_car_type"
        app:layout_constraintTop_toBottomOf="@+id/textView_car_type" />

    <TextView
        android:id="@+id/textView_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="手机号"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_miles"
        app:layout_constraintTop_toBottomOf="@+id/textView_miles" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViev_plate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="车牌号："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_tel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="电话："
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/textViev_plate"
        app:layout_constraintStart_toStartOf="@+id/textViev_plate"
        app:layout_constraintTop_toBottomOf="@+id/textViev_plate" />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="地址："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViev_plate"
        app:layout_constraintStart_toStartOf="@+id/textViev_plate"
        app:layout_constraintTop_toBottomOf="@+id/textView_tel" />
</androidx.constraintlayout.widget.ConstraintLayout>